<?import javafx.scene.control.*?>
<?import javafx.scene.layout.FlowPane?>
<?import java.net.URL?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<FlowPane fx:id="root" fx:controller="TempConversion" xmlns:fx="http://javafx.com/fxml">
    <stylesheets>
        <URL value="@Main.css"/>
    </stylesheets>
    <children>
        <HBox>
            <VBox>
                <Label>Celsius</Label>
                <TextField fx:id="firstField"></TextField>
             </VBox>

             <VBox>
                <Label>Fahrenheit</Label>
                <TextField fx:id="secondField"></TextField>
             </VBox>

             <VBox>
                 <Button fx:id="ctof" onAction="#handlectof">Celsius to Fahrenheit</Button>
                 <Button fx:id="ftoc" onAction="#handleftoc">Fahrenheit to Celsius</Button>
                 <Button fx:id="clear" onAction="#handleclear">Clear Values</Button>
             </VBox>
        </HBox>
    </children>
</FlowPane>